<script>
	// Fetch all the details element.
	const details = document.querySelectorAll('details');
	// Fetch img element for areas of support
	const imgElm = document.getElementById('areasofsupport-img');
	// Fetch img credit element for areas of support
	const imgElmCredit = document.getElementById('areasofsupport-img-credit');
	// Save id of from data attribute of current targetDetail
	var curID = 'support1';

	// Add the onclick listeners.
	details.forEach((targetDetail) => {
		targetDetail.addEventListener('click', () => {
			// Close all the details that are not targetDetail.
			details.forEach((detail) => {
				if (detail !== targetDetail) {
					detail.removeAttribute('open');
				}
			});
			// Change image for targetDetail
			document.getElementById(curID).style.opacity = 0;
			document.getElementById(targetDetail.dataset.imgId).style.opacity = 1;
			curID = targetDetail.dataset.imgId;
		});
	});
</script>
